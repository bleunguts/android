<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.syncloud.android" >

    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CHANGE_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.syncloud.android.activity.DeviceList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DeviceActivity"
            android:label="@string/title_activity_device" >
        </activity>
        <activity
            android:name="org.syncloud.android.app.Owncloud"
            android:label="@string/title_activity_owncloud" >
        </activity>
        <activity
            android:name="org.syncloud.android.app.Remote_Access"
            android:label="@string/title_activity_remote__access" >
        </activity>
        <activity
            android:name="org.syncloud.android.app.Insider"
            android:label="@string/title_activity_insider" >
        </activity>
    </application>

</manifest>
