<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.syncloud.android.activity.DeviceAppsActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            >

            <TextView
                android:id="@+id/device_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="device name a sd a "
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/device_name_edit_btn"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

            <ImageButton
                android:id="@+id/device_name_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="20dp"
                android:background="@drawable/ic_action_edit"
                />

        </RelativeLayout>

    </LinearLayout>

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/app_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>
