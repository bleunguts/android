<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.syncloud.android.ui.DeviceAppsActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/txt_bold_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Name of device"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/txt_first_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Full domain name"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        />

    <LinearLayout
        android:id="@+id/layout_results"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_apps"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/txt_apps_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="Failed to load apps list"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>
