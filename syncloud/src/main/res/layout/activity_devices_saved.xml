<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.syncloud.android.ui.DevicesSavedActivity">

    <ProgressBar
        android:id="@+id/open_progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:visibility="invisible"
        android:indeterminate="true"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        />

    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_weight="1"
                  >

        <ListView android:id="@+id/devices_saved"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:visibility="visible"
                  android:paddingLeft="5dp"
                  android:paddingStart="5dp"
                  />

        <TextView android:id="@android:id/empty"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:paddingLeft="30dp"
                  android:paddingRight="30dp"
                  android:gravity="center"
                  android:textSize="18sp"
                  android:text="Discover devices in your network."
                  />

    </LinearLayout>

    <Button android:id="@+id/discovery_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="discover"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Discover"
            />

</LinearLayout>
