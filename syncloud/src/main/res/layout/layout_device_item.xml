<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/two_lines_item_padding"
    android:paddingBottom="@dimen/two_lines_item_padding"
    android:descendantFocusability="blocksDescendants"
    >

    <TextView
        android:id="@+id/txt_bold_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="somedomain.syncloud.it"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingLeft="@dimen/item_padding_left"
        />

    <TextView
        android:id="@+id/txt_additional_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Device name"
        android:textSize="14sp"
        android:paddingLeft="@dimen/item_padding_left"
        />

</LinearLayout>