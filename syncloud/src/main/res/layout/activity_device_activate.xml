<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.syncloud.android.ui.DeviceActivateActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp">

        <TextView
            android:id="@+id/managed_domain_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device name:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/device_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="domain"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/domain_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/name_login_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_login_label"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/user_domain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="@string/device_activation_domain"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <Button
        android:id="@+id/name_activate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="activate"
        android:text="Activate"

        />

    <Button
        android:id="@+id/name_deactivate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="deactivate"
        android:text="Deactivate"
        android:visibility="gone"
        />

</LinearLayout>
