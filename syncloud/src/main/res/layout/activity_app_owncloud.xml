<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.syncloud.android.activity.app.Owncloud"
    android:orientation="vertical">

    <TextView
        android:id="@+id/owncloud_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="url"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2.0"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/owncloud_web_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owncloud_web_btn_text"
            android:layout_weight="1"
            android:onClick="showWeb"
            />

        <Button
            android:id="@+id/owncloud_mobile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owncloud_mobile_btn_text"
            android:layout_weight="1"
            android:onClick="showMobile"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/owncloud_login_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >

        <TextView
            android:id="@+id/login_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_label"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/owncloud_pass_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pass_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_label"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <Button
        android:id="@+id/owncloud_activate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="activate"
        android:text="@string/activate_button"

        />

</LinearLayout>
